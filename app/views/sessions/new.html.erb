<style type="text/css">
body {
        width:            100%;
        height:           100%;
        background-image: url('data:image/gif;base64,');
		background-size: cover;
		background-color: rgb(64, 51, 133);
}
</style>

<div class="container">
<div style="min-height:220px">

</div>
  <%= form_tag sessions_path, class:'form-signin' do %>
      <%= label_tag 'Enter user and password to continue:'%><br />
  	<%= text_field_tag :login, nil, class:'form-control', placeholder: 'username'%>
      <%= password_field_tag :password, nil, class:'form-control', placeholder: 'password'%>
      <p class="button"><%= submit_tag "Log in", class:'form-control btn btn-default' %></p>
		<%=render 'layouts/flash'%>
  <% end %>
  
</div>
<script type="text/javascript">
function skyShift() {
	var hue = 'rgb(' + (Math.floor(Math.random() * 256)) + ',' + (Math.floor(Math.random() * 256)) + ',' + (Math.floor(Math.random() * 256)) + ')';
    $('body').animate( { backgroundColor: hue }, 5000);
}
setInterval(skyShift, 6000);

</script>