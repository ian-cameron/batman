<%=form_for @deployment, remote: true, id: 'depform-sm' do |f|%>
<table class="batform">
  <tr>
      <th><%= f.label 'Battery Name' %></th>
      <td><strong><%= @deployment.device.name %></strong>
		   <%=@deployment.device.device_type.try(:name) ? "(#{@deployment.device.device_type.name})" : "" %></td>
  </tr>
  <tr>
	  <th>
		  Project Name
	  </th>
	  <td>
		  <%=@deployment.project.name%>
	  </td>
  </tr>
  <tr>
	  <th>Starting Voltage
		  (<em><%=@deployment.start_date.strftime("%D")%></em>)
	  </th>
	  <td>
		  <%=@deployment.start_voltage%>
	  </td>
  </tr>
  
  <tr>
	  <th><%= f.label :end_voltage %></th>
	  <td><%= f.number_field :end_voltage, {min: 0, max: 24, step: 0.1} %></td>
  </tr>
  
  <tr>
	  <th><%= f.label :end_date %></th>
	  <td><%= f.date_select :end_date%></td>
  </tr>

</table>
<% end %>