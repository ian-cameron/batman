<%=form_for @device do |f|%>
<table>
	<tr>
      <th><%= f.label :name %></th>
      <td><%= f.text_field :name%></td>
  </tr>
  <tr>
	  <th><%= f.label :type %></th>
	  <td><%= f.select :type_id,  DeviceType.all.map{|m| [m.name, m.id]}%>
		  <%= link_to "<div class='btn-sm btn-default' style='display:inline'><span class='glyphicon glyphicon-wrench'> Manage</span></div>".html_safe, device_types_path %></td>
  </tr>
  <tr>
	  <th><%= f.label :purchased %></th>
	  <td><%= f.date_select :purchased_on%></td>
  </tr>
  <tr>
	  <th><%= f.label :voltage %></th>
	  <td><%= f.number_field :voltage%></td>
  </tr>
  <tr>
	  <th><%= f.label :notes %></th>
	  <td><%= f.text_area :notes%></td>
  </tr>
  <tr>
	  <th></th>
	  <td><%= f.submit %></td>
  </tr>
</table>
<% end %>