	  <div class="panel panel-default">
	    <div class="panel-heading">	
	      <h3 class="panel-title">Batteries Available</h3> 
		  <%=link_to "<div class='btn-header btn-sm btn-default pull-right'><span class='glyphicon glyphicon-plus'></span> New Battery</div>".html_safe, new_device_path %>
	    </div>
	    <div class="panel-body">
	      <% @devices.each do |d| %>
		    <div class='battery' id='battery-img-<%=d.id%>'>
				<strong><%= d.name %></strong>
				<%= d.voltage.to_s %>V&nbsp;
			</div>
		  <%end%>
	    </div>
	  </div>